<Layout title="Cache - arth">
  <div class="container mx-auto max-w-3xl px-4 py-12">
    <h2 class="text-2xl uppercase tracking-wider text-center mb-12">Cache</h2>
    <div class="space-y-16">
      {
        exhibits.map(({ title, image, size }) => (
          <div class="text-center">
            <div class="uppercase tracking-wider text-text-muted mb-4">
              {title}
            </div>
            <img
              class={`rounded-lg mx-auto ${size} hover:ring-2 hover:ring-accent transition-all`}
              src={image}
              alt={title}
            />
          </div>
        ))
      }
